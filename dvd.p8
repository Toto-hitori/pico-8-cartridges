__lua__
function _init()
	circle = {}
	circle.x = 35
	circle.y = 57
	circle.speed = {}
	circle.speed.x = 1
	circle.speed.y = 1
end

function _update()
	
	check_collision()
	circle.x += circle.speed.x
	circle.y += circle.speed.y
end

function _draw()
	cls(1)
	spr(2,circle.x,circle.y)
end

function check_collision()
	if(circle.x > 119)then
		circle.speed.x =2-rnd(1)
		circle.speed.x *= -1
	elseif(circle.x <0) then
		circle.speed.x =2-rnd(1)
		
	elseif(circle.y > 119)then
		circle.speed.y = 2-rnd(1)
		circle.speed.y *= -1
	elseif(circle.y <0)then
		circle.speed.y =2-rnd(1)
		end
end
